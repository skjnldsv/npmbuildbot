{
  "name": "npmbuild",
  "version": "1.0.0",
  "description": "A probot app that tries to compile npm assets and commit",
  "author": "Roeland Jago Douma <roeland@famdouma.nl> (https://rullzer.com)",
  "license": "ISC",
  "repository": "https://github.com/skjnldsv/npmbuildbot.git",
  "homepage": "https://github.com/skjnldsv/npmbuildbot",
  "bugs": "https://github.com/skjnldsv/npmbuildbot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app",
    "npm",
    "compile",
    "build"
  ],
  "scripts": {
    "dev": "nodemon",
    "start": "probot run ./index.js",
    "lint": "standard --fix",
    "test": "jest && standard",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "fs-extra": "^7.0.1",
    "github-app": "^4.0.1",
    "global-npm": "^0.3.0",
    "probot": "^7.5.1",
    "simple-git": "^1.110.0"
  },
  "devDependencies": {
    "jest": "^24.7.1",
    "nock": "^10.0.6",
    "nodemon": "^1.18.11",
    "smee-client": "^1.1.0",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
